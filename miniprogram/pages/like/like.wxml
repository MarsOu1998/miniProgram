<!-- 负责整体页面view -->
<view>
  <view wx:if="{{empty}}">
      <view class="null">
          <image src="/images/null.png"></image>
      </view>
  </view>
  <view wx:else>
        <view wx:for="{{job}}">
           
            <view class="work" bindtap="{{index}}">
            <view>
            <!-- 工作简介 -->
            <image src="/images/icon1.png"></image>
              {{item[0]['title']}}
            </view>
            <!-- 工作类型 -->
            <view class="type">
              <view class="time">
                {{item[0]['type']}} | {{item[0]['time']}} | {{item[0]['sex']}}
              </view>
              <view class="salary">
                {{item[0]['salary']}}
              </view>
              </view>
              <!-- 分割线 -->
              <view class="border"></view>
            </view>
        </view>
  </view>
</view>