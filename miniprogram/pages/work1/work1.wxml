<!-- 总体的view -->
<view class="whole">
  <!-- 商家信息 -->
  <view class="title">
    <!-- 商家名称与信用分 -->
    <view class="nameScore">
        <!-- 商家名称 -->
        <view class="name">
        <view class="font">商家名称:蜜雪冰城</view>
        <view>发布者:{{job1['account']}}</view>
        </view>
         <!-- 商家信用 -->
        <view class="score">
            <text>商家信用:60分</text> 
        </view>
    </view>
    <!-- 收藏到我喜欢 -->
    <view class="like">
      <image src="/images/xihuan.png"></image>
    </view>
  </view>
  <!-- 分割线 -->
  <view class="border"></view>
  <!-- 地图导航 -->
  <view class="mapView">
    <!-- 地图图片 -->
    <view class="map">
      <image src="/images/defaultMap.png"></image>
    </view>
  </view>
  <view class="border"></view>
  <!-- 兼职内容 -->
  <view>
    <!-- 兼职标题与工资 -->
    <view class="titleSalary">
      <view>
        {{job1['title']}}
      </view>
      <view class="salary">
        {{job1['salary']}}
      </view>
    </view>
    <!-- 兼职内容 -->
    <view class="time">
      <!-- 招聘周期 -->
      <view>
        招聘周期:{{job1['time']}}
      </view>
      <!-- 兼职时间 -->
      <view>
        工作内容:{{job1['content']}}
      </view>
      <!-- 结算类型 -->
      <view>
        结算类型:{{job1['type']}}
      </view>
      <!-- 兼职信息 -->
      <view>
        工作内容:{{job1['content']}}
      </view>
      <!-- 兼职地点 -->
      <view>
        兼职地点：{{job1['place']}}
      </view>
      <!-- 联系方式 -->
      联系方式：{{job1['phone']}}
    </view>
  </view>
</view>